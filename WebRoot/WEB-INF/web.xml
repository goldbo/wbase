	<!--		</listener-class>-->
	<!--	</listener>-->
	<!--end  在线用户数检查 正改造中 -->

	<!-- begin 标准ACTION 配置 (with debugging) -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>
			org.apache.struts.action.ActionServlet
		</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>
				/WEB-INF/configure/struts-config/struts-config.xml,
				/WEB-INF/configure/struts-config/struts-wbase-config.xml,
			</param-value>
		</init-param>

		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>2</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<!-- end 标准ACTION 配置 (with debugging) -->

	<!--begin  Struts 标签库配置－包括自定义标签库 -->
	<taglib>
		<taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
		<taglib-location>
			/WEB-INF/configure/taglib/struts-bean.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
		<taglib-location>
			/WEB-INF/configure/taglib/struts-html.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
		<taglib-location>
			/WEB-INF/configure/taglib/struts-logic.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/WEB-INF/struts-nested.tld</taglib-uri>
		<taglib-location>
			/WEB-INF/configure/taglib/struts-nested.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/WEB-INF/wbase.tld</taglib-uri>
		<taglib-location>
			/WEB-INF/configure/taglib/wbase.tld
		</taglib-location>
	</taglib>

	<!--end  Struts 标签库配置－包括自定义标签库 -->

