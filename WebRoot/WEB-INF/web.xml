<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	<display-name>Wingo_Base Web Application</display-name>

	<!--begin 检测会话是否失效 -->
	<filter>
		<filter-name>CommonSessionInvalide</filter-name>
		<filter-class>
			com.wingo.wbase.common.filter.CommonSessionInvalide
		</filter-class>
		<init-param>
			<param-name>noFilterURI</param-name>
			<param-value>
				/,/exit.jsp,/index.do,/SystemLogin.do,/index.jsp,/ReportAction.do,/report.jsp,/platform/report/amline/amline.jsp
			</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>CommonSessionInvalide</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CommonSessionInvalide</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CommonSessionInvalide</filter-name>
		<url-pattern>*.servlet</url-pattern>
	</filter-mapping>
	<!--end 检测会话是否失效-->

	<!--begin 中文编码的处理,统一采用过滤器来设置UTF-8-->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<!--end 中文编码的处理,统一采用过滤器来设置UTF-8-->

	<!--begin  在线用户数检查 正改造中 -->
	<!--	<listener>-->
	<!--		<listener-class>-->
